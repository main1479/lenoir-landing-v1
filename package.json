{
	"name": "porject1",
	"version": "1.0.0",
	"description": "Bootstrap starter pack by Mainul Islam",
	"main": "index.js",
	"scripts": {
		"bootstrap": "sass node_modules/bootstrap/scss/bootstrap.scss src/css/bootstrap.css",
		"css": "sass src/sass/main.scss src/css/style.css -w",
		"bootstrap-js": "concat -o src/js/bootstrap.js node_modules/bootstrap/dist/js/bootstrap.min.js",
		"start": "npm-run-all bootstrap css"
	},
	"author": "Mainul Islam",
	"license": "ISC",
	"dependencies": {
		"@popperjs/core": "^2.4.4",
		"bootstrap": "^5.1.3",
		"jquery": "^3.5.1",
		"sass": "^1.42.1"
	},
	"devDependencies": {
		"concat": "^1.0.3",
		"npm-run-all": "^4.1.5"
	}
}
